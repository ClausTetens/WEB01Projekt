@model Voresjazzklub.Models.Tilmeldinger

@{
    ViewBag.Title = "Create";
}

<h2>Meld mig til</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="large-text fin-farve">@Html.DisplayFor(model => model.brugerId)</h4>
        <h4 class="large-text fin-farve">@ViewBag.arrangementBeskrivelse</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.arrangementId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.erTilmeldt, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.erTilmeldt)
                    @Html.ValidationMessageFor(model => model.erTilmeldt, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.spiser, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.spiser)
                    @Html.ValidationMessageFor(model => model.spiser, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.arrangementId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
