<p>
    @Html.ActionLink("Opret ny bruger", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.brugerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createTs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.prim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.erAdmin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem=>item.brugerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.createTs)
        </td>
        <td>
            @item.password.Substring(0, 6)...
            @*@Html.DisplayFor(modelItem => item.password)*@
        </td>
        <td>
            @item.salt.Substring(0,6)...
            @*@Html.DisplayFor(modelItem => item.salt)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.prim)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.erAdmin)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { id=item.brugerId }) |
            @Html.ActionLink("Details", "Details", new { id=item.brugerId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.brugerId })
        </td>
    </tr>
}

</table>
