@model IEnumerable<Voresjazzklub.Models.UsersTableModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<h4 class="large-text fin-farve">Alle brugere</h4>
<!--

http://www.tutorialsteacher.com/mvc/integrate-controller-view-model

https://docs.microsoft.com/en-us/aspnet/mvc/overview/getting-started/introduction/adding-a-model

https://www.asp.net/identity
